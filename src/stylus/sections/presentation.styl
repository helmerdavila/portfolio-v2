@import "../media-queries"
@import "../variables"

.first-section
  background url("~@/assets/mac-development.jpg") center no-repeat
  background-size cover

  .overlay
    position absolute
    top 0
    left 0
    height 100%
    width 100%
    background-color #000000
    opacity 0.4

  .text-change-mobile
    .span-first-text
      display block

  h1, h3, h2
    color white

  .is-name
    font-size 80px
    letter-spacing 10px
    +mobile()
      font-size 60px
